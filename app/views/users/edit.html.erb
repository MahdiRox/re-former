<h1>Edit Your Account</h1>
<%= form_with model: @user, url: users_path(@user) do |f| %>
  <div>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, value: @user.username %>
  </div>
  <div>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, placeholder: @user.email %>
  </div>
  <div>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
  </div>
  <br>
  <%= f.submit "Edit User" %>
<% end %>
